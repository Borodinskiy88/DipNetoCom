<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/ic_launcher_background</item>
        <item name="colorPrimary">@color/PRIMARY_900</item>
        <item name="colorPrimaryDark">@color/PRIMARY_900</item>
        <item name="android:statusBarColor">@color/PRIMARY_900</item>

    </style>

    <style name="Widget.AppTheme.IconButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@color/PRIMARY_600</item>
        <item name="iconPadding">0dp</item>
        <item name="android:textColor">@color/PRIMARY_600</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingStart">@dimen/icon_button_padding_12</item>
        <item name="android:paddingEnd">@dimen/icon_button_padding_12</item>
        <item name="android:minWidth">@dimen/icon_button_min_size_48</item>
        <item name="android:minHeight">@dimen/icon_button_min_size_48</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="iconTint">@color/PRIMARY_600</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="fab_square" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Widget.AppTheme.PlayPauseButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="iconTint">@color/PRIMARY_600</item>
        <item name="icon">@drawable/sl_play_48</item>
        <item name="android:minWidth">@dimen/fab_margin_24</item>
        <item name="android:minHeight">@dimen/fab_margin_24</item>
    </style>


</resources>