<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.edit.NewEventFragment">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/checkbox_padding_start_8"
        android:layout_marginTop="@dimen/checkbox_padding_start_8"
        android:layout_marginEnd="@dimen/checkbox_padding_start_8"
        android:paddingBottom="?actionBarSize">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_line"
            android:orientation="vertical">

            <Button
                android:id="@+id/edit_event_date"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/checkbox_padding_start_8"
                android:hint="@string/sample_date"
                android:textColor="@color/black"
                app:icon="@drawable/calendar_pink_24"
                app:iconTint="@color/SECONDARY_200"
                app:layout_constraintStart_toEndOf="parent" />

            <Button
                android:id="@+id/edit_event_time"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/sample_time"
                android:textColor="@color/black"
                app:icon="@drawable/time_24"
                app:iconTint="@color/SECONDARY_200"
                app:layout_constraintStart_toEndOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/checkbox_padding_start_8"
                android:layout_marginTop="@dimen/checkbox_padding_start_8"
                android:drawablePadding="@dimen/checkbox_padding_start_8"
                android:text="@string/type_event"
                android:textSize="16sp"
                android:textStyle="italic" />

            <RadioGroup
                android:id="@+id/edit_event_type_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/checkbox_padding_start_8"
                android:checkedButton="@+id/online"
                android:drawablePadding="@dimen/checkbox_padding_start_8">

                <RadioButton
                    android:id="@+id/online"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/online" />

                <RadioButton
                    android:id="@+id/offline"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/offline" />
            </RadioGroup>

            <EditText
                android:id="@+id/edit_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/common_spacing_16"
                android:drawablePadding="@dimen/checkbox_padding_start_8"
                android:gravity="start|top"
                android:hint="@string/add_note"
                android:inputType="textMultiLine"
                app:drawableLeftCompat="@drawable/create_pink_24"
                app:layout_anchor="@+id/scrollView2"
                app:layout_anchorGravity="center"
                tools:text="@tools:sample/lorem[50]" />


            <EditText
                android:id="@+id/edit_link"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/common_spacing_16"
                android:autoLink="web"
                android:drawableStart="@drawable/link_pink_24"
                android:drawablePadding="@dimen/checkbox_padding_start_8"
                android:gravity="start|top"
                android:hint="@string/add_link"
                android:inputType="textMultiLine"
                android:textColorLink="@color/PRIMARY_600"
                tools:text="@tools:sample/lorem[3]" />

            <FrameLayout
                android:id="@+id/preview_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_spacing_16">

                <ImageView
                    android:id="@+id/photo_preview"
                    android:layout_width="360dp"
                    android:layout_height="360dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/checkbox_padding_start_8"
                    android:adjustViewBounds="true"
                    android:background="@drawable/background_line"
                    tools:srcCompat="@tools:sample/avatars[3]" />

                <Button
                    android:id="@+id/clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:text="@string/clear" />

            </FrameLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomAppBar"
        style="@style/Widget.MaterialComponents.BottomAppBar.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/PRIMARY_50">

        <ImageView
            android:id="@+id/gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_spacing_16"
            android:layout_marginTop="@dimen/common_spacing_16"
            app:srcCompat="@drawable/image_24" />

        <ImageView
            android:id="@+id/photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_spacing_16"
            android:layout_marginTop="@dimen/common_spacing_16"
            app:srcCompat="@drawable/photo_24" />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/fab_margin_24"
        android:layout_marginBottom="@dimen/fab_margin_24"
        android:importantForAccessibility="no"
        app:srcCompat="@drawable/check_24" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>